# ===============================================
# ENVIRONMENT CONFIGURATION
# ===============================================
# Set to 'production' or 'development'
# This single variable controls all environment-dependent configurations
NODE_ENV=development

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================
APP_USERNAME=your_app_username
APP_PORT=3007
BACKEND_HOST=localhost

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# Development: localhost
# Production: mysql (Docker service name) or VPS IP
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_ROOT_PASSWORD=your_root_password

# ===============================================
# RATE LIMITING CONFIGURATION
# ===============================================
MAX_REGISTRATIONS=4
RESET_HOURS=72

# ===============================================
# EMAIL SERVICE CONFIGURATION
# ===============================================
# Gmail example (use App Password for security)
# Generate App Password at: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ===============================================
# NOTES
# ===============================================
# To switch to production:
# 1. Change NODE_ENV to 'production'
# 2. Update MYSQL_HOST to your production database host
# 3. Set proper database credentials
# 4. Configure email settings
# All URLs (API, Frontend, Domain) are automatically configured based on NODE_ENV
